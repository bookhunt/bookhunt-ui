// VSCode 기본설정
{
    "editor.tabSize": 2, //탭 사이즈 2칸으로 설정
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }, // 저장하거나 붙여넣기 할 때 자동으로 ESLint와 Prettier 규칙 적용
    "typescript.tsdk": "node_modules/typescript/lib" // vscode에 내장된 타입스크립트를 사용하지 않고 별도의 SDK 경로를 지정해서 최신 버전 사용
}